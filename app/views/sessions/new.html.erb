<% provide(:title, "Giriş") %>
<h1>Giriş Yap</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :Şifre %>
      <%= f.password_field :password %>

      <%= f.submit "Giriş Yap", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>Üye değil misiniz? <%= link_to "Hemen Kayıt Ol!", signup_path %></p>
  </div>
</div>